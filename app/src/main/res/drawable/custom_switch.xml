<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <layer-list>
            <item>
                <shape android:dither="true" android:shape="rectangle" android:useLevel="false" android:visible="true">
                    <gradient android:angle="270" android:endColor="#ffffff" android:startColor="#ffffff" />
                    <size android:width="24sp" android:height="24sp" />
                    <stroke android:width="4dp" android:color="#0000ffff" />
                </shape>
            </item>
            <!-- Rectangle on top -->
            <item android:gravity="center" android:right="10dp" android:bottom="10dp">
                <shape android:shape="rectangle">
                    <stroke android:width="1dp" android:color="#000000" />
                    <solid android:color="@color/black"/>
                    <size android:width="6dp" android:height="6dp"/>
                </shape>
            </item>

            <item android:gravity="center" android:left="10dp" android:top="10dp">
                <shape android:shape="rectangle">
                    <stroke android:width="1dp" android:color="#000000" />
                    <solid android:color="@color/black"/>
                    <size android:width="6dp" android:height="6dp"/>
                </shape>
            </item>

            <!-- Rectangle on bottom -->
            <item android:gravity="center" android:left="10dp" android:bottom="10dp">
                <shape android:shape="rectangle">
                    <stroke android:width="1dp" android:color="#000000" />
                    <solid android:color="@color/black"/>
                    <size android:width="6dp" android:height="6dp"/>
                </shape>
            </item>

            <item android:gravity="center" android:right="10dp" android:top="10dp">
                <shape android:shape="rectangle">
                    <stroke android:width="1dp" android:color="#000000" />
                    <solid android:color="@color/black"/>
                    <size android:width="6dp" android:height="6dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:dither="true" android:shape="rectangle" android:useLevel="false" android:visible="true">
                    <gradient android:angle="270" android:endColor="#ffffff" android:startColor="#ffffff" />
                    <size android:width="24sp" android:height="24sp" />
                    <stroke android:width="4dp" android:color="#0000ffff" />
                </shape>
            </item>
            <item android:gravity="center" android:bottom="10dp">
                <shape android:shape="line">
                    <stroke android:width="2dp" android:color="#000000" />
                    <size android:width="18dp" />
                </shape>
            </item>
            <item android:gravity="center">
                <shape android:shape="line">
                    <stroke android:width="2dp" android:color="#000000" />
                    <size android:width="18dp" />
                </shape>
            </item>
            <item android:gravity="center" android:top="10dp">
                <shape android:shape="line">
                    <stroke android:width="2dp" android:color="#000000" />
                    <size android:width="18dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
