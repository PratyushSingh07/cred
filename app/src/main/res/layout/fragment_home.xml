<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    tools:context=".ui.home.HomeFragment">

    <ImageView
        android:id="@+id/ivCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/placeholder" />

    <LinearLayout
        android:id="@+id/llText"
        android:layout_margin="30dp"
        android:layout_below="@id/ivCategory"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tvCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Placeholder Category"
            android:textColor="@color/white"
            android:fontFamily="@font/dmserifdisplay_regular"
            android:textStyle="bold"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/tvCategorySubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grow Savings 3x faster"
            android:textColor="@color/white"
            android:fontFamily="@font/dmserifdisplay_regular"
            android:textSize="20sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/llText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            android:layout_margin="30dp"
            android:id="@+id/btnCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Go to Category"
            android:padding="16dp"
            android:drawableEnd="@drawable/ic_baseline_arrow_forward_24"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"/>

    </LinearLayout>

</RelativeLayout>